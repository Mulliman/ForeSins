<div class="fs-cosmos @Class @(HasCurvedTop ? "fs-cosmos--curved-top" : "") @(HasCurvedBottom ? "fs-cosmos--curved-bottom" : "")">
    <div class="stars"></div>
    <div class="stars2"></div>
    <div class="stars3"></div>

    @ChildContent
</div>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }

    [Parameter] public bool HasCurvedTop { get; set; }

    [Parameter] public bool HasCurvedBottom { get; set; }    

    [Parameter] public string Class { get; set; }  
}